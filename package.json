    "cdk8s-cli": "^2.198.30",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "npm-check-updates": "^16.14.12",
    "prettier": "^3.2.2",
    "ts-node": "^10",
    "typescript": "^5.3.3"
